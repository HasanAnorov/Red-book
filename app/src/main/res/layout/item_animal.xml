<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivAnimal"
        android:layout_width="100dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvUzbName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_standart"
        app:layout_constraintStart_toEndOf="@id/ivAnimal"
        android:text="Uzb name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/nameStandart"/>

    <TextView
        android:id="@+id/tvRusName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvUzbName"
        app:layout_constraintStart_toEndOf="@id/ivAnimal"
        android:text="Russiam animal name"
        android:textSize="@dimen/nameStandart"/>

    <TextView
        android:id="@+id/tvEngName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvRusName"
        app:layout_constraintStart_toEndOf="@id/ivAnimal"
        android:text="English animal name"
        android:textSize="@dimen/nameStandart"/>


</androidx.constraintlayout.widget.ConstraintLayout>